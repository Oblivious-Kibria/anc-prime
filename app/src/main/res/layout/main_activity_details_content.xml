<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_15dp"
        android:layout_marginBottom="@dimen/value_25dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Sales Flow"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_10dp"
            android:fontFamily="@font/roboto_light"
            android:text="(monthly)"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_14dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/values_240dp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/sales_flow_line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_marginEnd="@dimen/value_10dp" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular_2"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_25dp"
        android:layout_marginBottom="@dimen/value_25dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Best Selling Products"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_10dp"
            android:fontFamily="@font/roboto_light"
            android:text="(monthly)"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_14dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/values_240dp">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/top_selling_product_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/values_240dp"
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_marginEnd="@dimen/value_10dp" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular_3"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_25dp"
        android:layout_marginBottom="@dimen/value_25dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Least Selling Products"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_10dp"
            android:fontFamily="@font/roboto_light"
            android:text="(monthly)"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_14dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/values_240dp">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/least_selling_product_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/values_240dp"
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_marginEnd="@dimen/value_10dp" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular_4"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/value_25dp"
        android:layout_marginBottom="@dimen/value_25dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_20dp"
            android:fontFamily="@font/roboto_light"
            android:text="Top Customers"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_10dp"
            android:fontFamily="@font/roboto_light"
            android:text="(monthly)"
            android:textColor="@color/color_text_normal_black"
            android:textSize="@dimen/value_14dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_customers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/value_30dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="@dimen/value_15dp"
            android:paddingEnd="@dimen/value_20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="12"
            tools:listitem="@layout/item_top_customer" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular_5"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/value_50dp"
            android:layout_height="@dimen/value_50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone" />

    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
